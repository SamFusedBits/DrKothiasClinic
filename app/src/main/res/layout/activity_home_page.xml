<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="111dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/help_circle"
        android:src="@drawable/dr" />

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="172dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="565dp"
        android:text="Hello,"
        android:textColor="#808080"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="172dp"
        android:text="Dr. Manish Kothia"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="393dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_toolbar_home_dark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/navigation_home"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.5"
            android:background="@drawable/toolbar_home_page_navigate_bg"
            android:src="@drawable/toolbar_home_logo" />

        <ImageView
            android:id="@+id/navigation_report"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.5"
            android:src="@drawable/toolbar_report_logo" />

        <ImageView
            android:id="@+id/navigation_appointment"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.5"
            android:src="@drawable/toolbar_appointment_logo" />

        <ImageView
            android:id="@+id/navigation_doctor"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.5"
            android:src="@drawable/toolbar_doctor_logo" />

        <ImageView
            android:id="@+id/navigation_profile"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.5"
            android:src="@drawable/toolbar_user_profile_logo" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="192dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="318dp"
        android:background="@drawable/button_background_signin"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="384dp"
        app:srcCompat="@drawable/contact_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="323dp"
        android:textColor="@color/white"
        android:text="Contact us today and get a consultation!"
        android:textSize="18dp" />

    <SearchView
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/searchview_border"
        android:queryHint="Search"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

</RelativeLayout>