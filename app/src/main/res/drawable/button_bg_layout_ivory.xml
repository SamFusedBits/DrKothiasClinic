<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ivory_white" /> <!-- White background -->
            <corners android:radius="16dp" /> <!-- More rounded corners -->
            <stroke android:color="@color/green" android:width="2dp"/> <!-- Border color changes when EditText is focused -->
            <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp"/> <!-- More padding -->
            <gradient android:startColor="@color/ivory_white" android:endColor="@color/ivory_white" android:angle="270"/> <!-- Gradient background -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ivory_white" /> <!-- White background -->
            <corners android:radius="16dp" /> <!-- More rounded corners -->
            <stroke android:color="@color/green" android:width="2dp"/> <!-- Border color and width -->
            <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp"/> <!-- More padding -->
            <gradient android:startColor="@color/ivory_white" android:endColor="@color/ivory_white" android:angle="270"/> <!-- Gradient background -->
        </shape>
    </item>
</selector>